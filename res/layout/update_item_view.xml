<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:nextFocusRight="@+id/update_action"
    app:cardBackgroundColor="@color/cardview_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:contentPaddingBottom="20dp"
    app:contentPaddingLeft="16dp"
    app:contentPaddingRight="16dp"
    app:contentPaddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|end"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/options_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/details_button"
                android:gravity="top|end"
                android:padding="4dip"
                android:src="@drawable/ic_menu_icon" />

            <TextView
                android:id="@+id/updates"
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/ic_system_update"
                android:drawableTint="@color/google_blue"
                android:drawingCacheQuality="high"
                android:fontFamily="@font/coiny"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="8sp"
                android:paddingStart="60dp"
                android:paddingTop="6dp"
                android:paddingEnd="30dp"
                android:paddingBottom="5dp"
                android:text="@string/new_updates_channel_title"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#2E2E2E"
                android:textSize="45sp"
                android:textStyle="normal"
                android:typeface="normal"
                android:visibility="visible"
                tools:text="Updates" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#342F80EC"
            android:gravity="center"
            android:orientation="vertical"
            tools:hapticFeedbackEnabled="true">

            <TextView
                android:id="@+id/build_avail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coiny"
                android:gravity="start"
                android:paddingStart="0dp"
                android:paddingEnd="120dp"
                android:text="New Build Available!! "
                android:textAlignment="textStart"
                android:textColor="#2F80EC"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/build_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="marquee"
                android:gravity="start"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingStart="0dp"
                android:paddingEnd="-140dp"
                android:singleLine="true"
                android:textColor="#2F80EC"
                android:textSize="14sp"
                tools:fontFamily="@font/coiny"
                tools:text="Build Name : CesiumOS_device-10.0-20200115-2020-OFFICIAL.zip" />

            <TextView
                android:id="@+id/build_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="start"
                android:maxLines="2"
                android:paddingStart="0dp"
                android:paddingEnd="104dp"
                android:singleLine="true"
                android:textColor="#2F80EC"
                android:textSize="14sp"
                tools:fontFamily="@font/coiny"
                tools:text="Build Date : 15 January 2020" />

            <TextView
                android:id="@+id/build_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="start"
                android:paddingStart="0dp"
                android:paddingEnd="168dp"
                android:singleLine="true"
                android:textColor="#2F80EC"
                android:textSize="14sp"
                tools:fontFamily="@font/coiny"
                tools:text="Build Size : 300 MB"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/build_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="start"
                android:paddingStart="0dp"
                android:paddingEnd="174dp"
                android:singleLine="true"
                android:textColor="#2F80EC"
                android:textSize="14sp"
                tools:fontFamily="@font/coiny"
                tools:text="Build Versiom : 2.6"
                tools:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="#342E2E2E"
            android:gravity="center"
            android:orientation="vertical"
            tools:hapticFeedbackEnabled="true">

            <TextView
                android:id="@+id/changelog_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coiny"
                android:gravity="start"
                android:paddingStart="0dp"
                android:paddingEnd="240dp"
                android:text="Changelog!"
                android:textAlignment="textStart"
                android:textColor="#2E2E2E"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/changelog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/coiny"
                android:gravity="start"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#2E2E2E"
                android:textSize="14sp"
                tools:fontFamily="@font/coiny"
                tools:text="* CesiumOS version bumped to 2.6!" />

            <TextView
                android:id="@+id/changelog2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-15dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/coiny"
                android:gravity="start"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#2E2E2E"
                android:textSize="14sp"
                tools:fontFamily="@font/coiny"
                tools:text="* CesiumOS version bumped to 2.6!" />

            <TextView
                android:id="@+id/changelog3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-15dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/coiny"
                android:gravity="start"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#2E2E2E"
                android:textSize="14sp"
                tools:fontFamily="@font/coiny"
                tools:text="* CesiumOS version bumped to 2.6!" />

            <TextView
                android:id="@+id/changelog5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-15dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/coiny"
                android:gravity="start"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#2E2E2E"
                android:textSize="14sp"
                tools:fontFamily="@font/coiny"
                tools:text="* CesiumOS version bumped to 2.6!" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="#342E2E2E"
            android:gravity="center"
            android:orientation="vertical"
            tools:hapticFeedbackEnabled="true">

            <TextView
                android:id="@+id/disc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/coiny"
                android:gravity="start"
                android:paddingStart="0dp"
                android:paddingEnd="240dp"
                android:text="Disclaimer!!"
                android:textAlignment="textStart"
                android:textColor="#2E2E2E"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/disclaimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/coiny"
                android:gravity="start"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:singleLine="true"
                android:textAlignment="textStart"
                android:textColor="#2E2E2E"
                android:textSize="14sp"
                tools:fontFamily="@font/coiny"
                tools:text="* CesiumOS version bumped to 2.6!" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.Material.Light.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:maxHeight="5dp"
                android:minHeight="5dp"
                android:paddingTop="4sp"
                android:progressDrawable="@drawable/ic_progress_bg"
                android:visibility="gone"
                tools:progress="65"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="35dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textColor="?android:textColorSecondary"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="162 of 300 MB (3 minutes left) â€¢ 65%"
                tools:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingTop="25dp"
            android:weightSum="1">

            <Button
                android:id="@+id/update_action"
                style="@style/Widget.RaisedButton2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:drawableStart="@drawable/ic_pause"
                android:drawablePadding="5dp"
                android:drawableTint="?android:textColorPrimaryInverse"
                android:fontFamily="@font/coiny"
                android:textAllCaps="false"
                android:textColor="?android:textColorPrimaryInverse"
                tools:text="Pause" />

            <Button
                android:id="@+id/details_action"
                style="@style/Widget.RaisedButton2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/ic_updateui_information"
                android:drawablePadding="5dp"
                android:drawableTint="?android:textColorPrimaryInverse"
                android:fontFamily="@font/coiny"
                android:text="@string/details_button"
                android:textAllCaps="false"
                android:textColor="?android:textColorPrimaryInverse" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
